html, body
  margin: 0
  padding: 0

body
  background-color: $colors.darkest-grey
  color: lighten($colors.darkest-grey, 60%)
  background-repeat: no-repeat
  background-position: top center
  background-attachment: fixed
  background-size: 100% auto
  font-family: brandon-grotesque, Helvetica, Arial, sans-serif
  font-weight: 300
  font-size: 20px
  display: flex
  flex-flow: column

h1,h2,h3,h4,h5
  font-family: brandon-grotesque, Helvetica, Arial, sans-serif
  font-weight: 300

h1
  font-size: 3rem
  margin: 1.5rem 0 0 0

h2
  font-size: 2.5rem
  margin: 1rem 0 0 0

h3
  font-size: 1.75rem
  margin: .75rem 0 0 0

a
  transition: .25s all linear
  color: var(--color-blue)
  font-weight: bold
  text-decoration: none

a:hover
  color: var(--color-red)
  text-decoration: underline
  cursor: pointer

a.training
  display: inline-block
  font-size: .8rem
  padding: .25rem .5rem

a.training:hover
  border: none
  text-decoration: none

pre
  font-size: 1rem
  overflow: auto

p
  font-size: 1.2rem

// definition lists
dl
  display: flex
  flex-flow: column wrap
  margin: 0

  dt
    margin: 0
    padding: 0
    font-size: .75rem
    line-height: 1

  dd
    margin: 0
    padding: 0
    flex: 1 auto
    font-size: 1rem
