header
  text-align: center
  padding: 0
  margin: 0
  display: flex
  flex-flow: column nowrap
  align-items: stretch
  justify-content: center
  background-image: var(--header-bg)
  background-position: center center
  background-repeat: no-repeat
  background-size: cover

  .hero
    border-radius: 0
    flex: 1
    padding: 6rem

    h1, p
      color: var(--header-color)
      text-shadow: 0 0 9px rgba($colors.black,.5)
      text-align: left

    h1
      line-height: .8
      padding: 0
      margin: 0
      font-size: 4rem
      font-weight: 500

    p
      font-size: .9rem
      line-height: 1
      padding: 1rem 0
      margin: 0
