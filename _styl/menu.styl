menu
  display: flex
  padding: 0
  margin: 0
  align-items: center
  justify-content: center
  background-color: rgba($colors.darkest-grey, .65)

  ul
    display: flex
    flex-flow: row wrap
    list-style: none
    margin: 0
    padding: 0

    li
      font-size: .9rem
      padding: .25rem
      margin: 0

      a
        display: inline-block
        padding: .5rem 1rem
        border-radius: 2rem
        color: $colors.light-grey
        &:hover
          text-decoration: none
          background-color: $colors.baby-blue
          color: $colors.darkest-grey
          box-shadow: inset 0 2px 5px rgba($colors.black, .5)

        &:active
          text-decoration: none
          background-color: $colors.green
          color: $colors.darkest-grey
