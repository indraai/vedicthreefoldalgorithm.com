.widget
  overflow: hidden
  display: flex
  flex-flow: row nowrap
  border: 2px dotted
  border-radius: .5rem
  height: 30rem
  .panel
    flex: 0 30%
    overflow: auto
    max-width: 30%
    ul
      list-style: none
      margin: 0
      padding: 0 .5rem 0 0

      li
        display: flex
        button
          font-size: .8rem
          display: block
          flex: 1
          text-align: left
          font-weight: 100

  .content
    flex: 0 70%
    padding: 0 1rem
    overflow: auto
    h1
      font-size: 2rem
      margin: 0
      padding: 0
    p
      margin: 0 0 1.5rem 0
      font-size: 1.1rem

    .properties
      h2
        font-size: 1.25rem
