.widget
  overflow: hidden
  display: flex
  flex-flow: row nowrap
  border: 2px dotted
  border-radius: .5rem
  height: 30rem

  .panel
    overflow: auto
    width: 200px
    min-width: 200px
    max-width: 200px

    ul
      list-style: none
      margin: 0
      padding: 0
      display: flex
      flex-flow: column nowrap
      height: 100%

      li
        flex: 1 auto
        display: flex

        button
          font-size: .75rem
          display: block
          flex: 1
          text-align: left
          font-weight: 100
          border-radius: 0
          margin: 0
          padding: .4rem

          &.active
            background-color: rgba($colors.green, .25)
            padding-left: .75rem

  .content
    padding: 0
    overflow: auto
    display: flex
    flex-flow: column nowrap

    h1
      text-align: center
      font-size: 2.25rem
      margin: 0
      padding: 5rem 0
      background-image: var(--widget-content-bg)
      color: $colors.white
      text-shadow: 0 2px 5px rgba($colors.black, .5)
      background-position: center center
      background-size: cover
      flex: 0

      span
        display: inline-block
        background-color: rgba($colors.black, .75)
        padding: 1rem 1.5rem
        border-radius: 3rem

    p
      flex: 0
      margin: 1rem
      font-size: 1rem

    .properties
      flex: 1
      display: flex
      flex-flow: row wrap
      justify-content: center

      article
        padding: .5rem
        flex: 1

        &.goodness
          background-color: rgba($colors.baby-blue, .25)
        &.passion
          background-color: rgba($colors.yellow, .25)
        &.ignorance
          background-color: rgba($colors.red, .25)

        h2
          font-size: 1.25rem
          margin: 0
          font-weight: bold
          text-transform: capitalize
          text-align: center

        p
          font-size: .9rem
          margin: 0
          padding: 0
