.widget
  overflow: hidden
  display: flex
  flex-flow: row nowrap

  .panel
    flex: 0 40%
    overflow: auto
    max-width: 40%
    ul
      list-style: none
      margin: 0
      padding: 0

      li
        display: flex
        button
          font-size: .8rem
          display: block
          flex: 1
          text-align: left
          font-weight: 100

  .content
    flex: 0 60%
    padding: 0 1rem
    overflow: auto
    h1
      font-size: 2rem
      margin: 0
      padding: 0
    p
      margin: 0 0 1.5rem 0
      font-size: 1rem
