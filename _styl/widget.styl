.widget
  overflow: hidden
  display: none

  height: 33rem
  background-color: $colors.dark-grey
  margin auto
  border-top: 3px solid $colors.dark-grey
  border-bottom: 3px solid $colors.dark-grey

  flex-flow: column nowrap

  @media screen and (min-width: 960px)
    display: flex
    flex-flow: row nowrap


  .panel
    overflow: auto
    min-width: 200px
    flex: 0 200px

    ul
      list-style: none
      margin: 0
      padding: 0
      display: flex
      flex-flow: column nowrap
      height: 100%

      li
        flex: 1 auto
        display: flex

        button
          font-size: .75rem
          display: block
          flex: 1
          text-align: left
          font-weight: thin
          border-radius: 0
          margin: 0
          padding: .4rem

          &.active
            background-color: rgba($colors.green, .25)
            padding-left: 1rem

  .content
    transition: var(--transition-default)
    position: relative
    padding: 0
    overflow: auto
    display: flex
    flex-flow: column nowrap
    background-image: var(--widget-content-bg)
    background-position: center center
    background-size: cover
    overflow: hidden

    .slide
    .properties
      transition: var(--transition-default)

    .slide
      display: flex
      flex-flow: column nowrap
      color: $colors.white
      text-shadow: 0 2px 3px rgba($colors.black, .75)
      flex: 1
      background-color: rgba($colors.black, .6)

      h1
        align-content: center
        align-self: start
        font-size: 2.5rem
        margin: 0
        padding: 0
        flex: 1
        width: 100%
        span
          display block
          text-align: center
          padding: .5rem 1rem 0 1rem
      > p
        margin: 0;
        padding: 1rem
        font-size: 1.2rem

        button
          padding: .25rem .75rem
          font-size: .85rem

    .properties
      display: none
      padding: 0
      margin: 0
      background-color: rgba($colors.black, .8)

      article
        transition: var(--transition-default)
        text-shadow: 0 2px 3px rgba($colors.black, .85)
        flex: 1 50%
        border-radius: .5rem
        margin: .5rem
        padding: .5rem
        &:hover
          background-color: rgba($colors.black, .25)
          cursor: pointer
          box-shadow: inset 0 0 .25rem

        h2
          font-size: 1.25rem
          margin: 0
          font-weight: bold
          text-transform: capitalize
          text-align: center

        p
          font-size: .9rem
          margin: 0
          padding: .5rem

    .drawer
      transition: var(--transition-default)
      position: absolute
      background-color: rgba($colors.black,.85)
      height: 100%
      bottom: -100%
      left: 0
      right: 0
      opacity: 0
      padding: 0
      margin: 0
      overflow: hidden

      > article
        display: flex
        flex-flow: column
        overflow: hidden
        padding: 1rem
        margin: 0
        height: 100%
        h1
          flex: 0
          margin: 0
          font-size: 2rem
          padding: 0
        h2
          flex: 0
          margin: 0
          font-size: 1.5rem
          padding: .25rem
        p
          flex: 0
          font-size: 1.25rem
        .row
          overflow: hidden
          height: 100%

          .describe
            margin-right: 1rem

        .instruction
        .describe
          flex: 1
          overflow: auto

          p
            font-size: 1rem

    &.open
      .drawer
        bottom: 0
        opacity: 1
      .slide
      .properties
        opacity: 0
  &.props

    .properties
      flex: 0
      display: flex
      flex-flow: row nowrap
      justify-content: center
