.widget
  overflow: hidden
  height: 25rem
  display: flex
  border: 2px dotted rgba(255,255,255,.5)
  border-radius: .5rem
  padding: .5rem
  flex-flow: row nowrap

  .panel
    flex: 0 40%
    overflow: auto
    max-width: 40%
    ul
      list-style: none
      margin: 0
      padding: 0

      li
        display: flex
        button
          display: block
          flex: 1
          text-align: left

  .content
    flex: 0 60%
    padding: 0 1rem
    overflow: auto
    h1
      font-size: 2rem
      margin: 0
      padding: 0
    p
      margin: 0 0 1.5rem 0
