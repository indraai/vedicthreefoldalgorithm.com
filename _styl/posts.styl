// post formatting
.other
  font-size: 1rem
  border-right: 3px solid $colors.dark-grey
  @media screen and (min-width: 900px)
    flex: 0 40%

  ul
    margin: 0
    padding: 1rem
    list-style: none

    li
      padding: 0 0 1rem 0

.posts
  margin: auto
  padding: 0 1.5rem
  @media screen and (min-width: 960px)
    flex: 0 60%

  .post
    padding: 0
    margin: 0 0 1rem 0

    h3
      font-size: 1.5rem
      margin: 0
      padding: 0

    p
      font-size: 1rem

  .excerpt
    p
      margin: 1rem 0 0 0
